# Discord to Telegram Relay Worker Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# REQUIRED: API Configuration
# ============================================================================

# Worker API key (from your Lovable project secrets)
WORKER_API_KEY=your_worker_api_key_here

# Supabase URL (from your Lovable project)
SUPABASE_URL=https://eeryrwdawoqggtpeckse.supabase.co

# ============================================================================
# REQUIRED: Telegram Bot Token (from @BotFather)
# ============================================================================

# Create a bot via @BotFather on Telegram and paste the token here
TELEGRAM_BOT_TOKEN=your_bot_token_here

# ============================================================================
# OPTIONAL: Configuration
# ============================================================================

# How often to refresh channel list in seconds (default: 60)
CHANNEL_REFRESH_INTERVAL=60

# Run browser in headless mode (default: true)
# Set to false for first-time Discord login
HEADLESS=true

# Path to store browser profile for Discord session persistence
BROWSER_PROFILE_PATH=./discord_profile
